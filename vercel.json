{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["zenn-cli/server/preview/**"] }
    },
    {
      "src": "zenn-cli/client/**",
      "use": "@vercel/static",
      "config": { "includeFiles": ["zenn-cli/client/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/",
      "dest": "zenn-cli/client/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "zenn-cli/client/$1"
    }
  ]
}
